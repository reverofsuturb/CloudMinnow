<section class="profile-bg">

  <div class="ui two column grid" id="profile">

    <div class="column" id="left-prof-col">
      <div class="row">
        <div class="ui raised segment">
          <a class="ui ribbon label" id="ribbon-1">Overview</a>
          <span>{{user.username}}</span>
          <span>{{user.email}}</span>
          <p>Test</p>
          <a class="ui ribbon label" id="ribbon-2">Community</a>
          <p>Test</p>
        </div>
      </div>
      <div class="row">
        <div>
          <button class="ui button active" id="new-pet">Add new pet</button>
          <div class="ui modal">
            <div class="header">Add New Pet</div>
            <div class="content">
              <form id="registeranimal-form" class="ui form">
                <div class="field">
                  <label>Pet Name</label>
                  <input
                    id="animalname-input-register"
                    type="text"
                    name="pet-name"
                    placeholder="Pet Name"
                  />
                </div>
                <div class="field">
                  <label>Pet Age</label>
                  <input
                    id="animalage-input-register"
                    type="text"
                    name="pet-age"
                    placeholder="Pet Age"
                  />
                </div>
                <div class="field">
                  <label>Type of Pet (please select)</label>
                  <div class="ui fluid selection dropdown" id="dropdown">
                    <input
                      id="animalspecies-input-register"
                      type="hidden"
                      name="Type of Pet"
                    />
                    <i class="dropdown icon"></i>
                    <div class="default text">Type of Pet</div>
                    <div class="menu">
                      <div class="item" data-value="1">Dog</div>
                      <div class="item" data-value="2">Cat</div>
                    </div>
                  </div>
                </div>
                <div class="field">
                  <label>Write Something About Your Pet</label>
                  <input
                    id="animaldescription-input-register"
                    type="text"
                    name="pet-Bio"
                    placeholder="Pet Bio"
                  />
                </div>
                <div class="field">
                  <label>Pet Photo JPEG</label>
                  <input
                    type="text"
                    name="pet-photo"
                    placeholder="Pet Photo (optional)"
                  />
                </div>
                <button class="ui button" type="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="center aligned column" id="right-prof-col">
      <div class="ui people shape">
        <div class="sides">
            {{#each user.animals as |animal|}}
            {{> profilePet}}
            {{/each}}
          <div class="ui container" id="prof-buttons">
            <ui class="grid">
              <div class="row">
                <div class="column">
                  <button class="ui button" id="rollback_left"><i
                      class="angle left icon"
                    ></i></button>
                  <button class="ui button" id="rollback_right"><i
                      class="angle right icon"
                    ></i></button>
                </div>
              </div>
            </ui>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script src="/js/registerAnimal.js"></script>